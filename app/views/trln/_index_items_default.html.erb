<div class="items well">

  <div class="availability institution-availability row">

    <% if document.all_shared_and_local_fulltext_urls_by_inst.any? %>
      <%= render partial: 'expanded_fulltext_links', locals: { document: document } %>
    <% else %>
      <%= render partial: 'hathitrust_link', locals: { document: document } %>
    <% end %>

    <% document.docs_with_holdings_merged_from_expanded_docs.each do |doc| %>

      <% if display_items?(document: doc) %>

        <div class="<%= institution_location_header_class %>">
          <h4><%= t("trln_argon.institution.#{doc.record_association}.long_name") %></h4>
        </div>

        <div class="<%= item_class %>">

          <div class="row">

            <%= render partial: 'finding_aid_links', locals: { document: document } %>

            <div class="<%= availability_class %>">

              <dl class="dl-horizontal">
                <dt><span class='status-label label label-info'><%= t('trln_argon.show.label.status') %></span></dt>
                <dd>
                  <span class="<%= binary_availability_span_class(document: doc) %>">
                    <%= doc.availability %>
                  </span>
                </dd>
              </dl>

            </div>

          </div>

        </div>

      <% end %>

    <% end %>

  </div>

</div>
