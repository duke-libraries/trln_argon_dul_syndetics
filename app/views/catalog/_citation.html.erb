<div class="modal-header">
  <button type="button" class="ajax-modal-close close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <p><i>These citations are automatically generated and may not always be correct. Double-check your citations to make sure they match an official citation manual or guide.</i></p>
</div>
<% @documents.each do |document| %>
  <% if document.citable? %>
    <div class="modal-header">
      <h3 class="modal-title"><%= document_heading(document) %></h3>
    </div>
    <div class="modal-body">
      <% document.citations.each do |format, citation| %>
        <h4><%= t("trln_argon.citation.#{format}") %></h4>
        <%= citation %>
      <% end %>
    </div>
  <% end %> 
<% end %>
